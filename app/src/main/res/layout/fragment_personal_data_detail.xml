<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".personalData.PersonalDataFormFillFragment">

    <include
        android:id="@+id/vpPersonalDataViewOne"
        layout="@layout/viewpod_personal_data_detail"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/vpPersonalDataViewTwo"
        layout="@layout/viewpod_personal_data_detail"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/vpPersonalDataViewThree"
        layout="@layout/viewpod_personal_data_detail"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:background="@color/colorPrimary"
        android:text="@string/back"
        android:layout_margin="@dimen/margin_10dp"
        android:textColor="@color/colorWhite" />
</LinearLayout>