<?xml version="1.0" encoding="utf-8"?>
<com.winechitpaing.sampleviewpod.viewpods.PersonalDataDetailViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tool:cardElevation="@dimen/card_elevation">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_16dp"
        android:orientation="vertical">



    <com.winechitpaing.sampleviewpod.viewpods.TextViewPod
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/name"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/text_size" />


    <com.winechitpaing.sampleviewpod.viewpods.TextViewPod
        android:id="@+id/tvPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/phone"
        android:layout_marginTop="10dp"
        android:textSize="15sp" />

    <com.winechitpaing.sampleviewpod.viewpods.TextViewPod
        android:id="@+id/tvAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/address"
        android:textSize="15sp" />
    </LinearLayout>
</com.winechitpaing.sampleviewpod.viewpods.PersonalDataDetailViewPod>